# MTLBooks Crawler Configuration

# Browser Settings
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
PUPPETEER_ARGS="--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage"

# Default Crawler Settings
DEFAULT_CONCURRENCY=2
DEFAULT_DELAY_MIN=1200
DEFAULT_DELAY_MAX=2200
DEFAULT_RETRIES=3

# Output Settings
DEFAULT_OUTPUT_DIR=./downloads
GENERATE_EPUB=false
INLINE_IMAGES=false

# Logging
LOG_LEVEL=info
DEBUG_MODE=false

# Network Settings
RESPECT_ROBOTS=true
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
REQUEST_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=0.5
MAX_CONCURRENT_REQUESTS=10
MIN_REQUEST_DELAY=1000

# Error Handling
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2
RETRY_MIN_TIMEOUT=1000
RETRY_MAX_TIMEOUT=5000

# Memory Management
MAX_MEMORY_USAGE=1024
GARBAGE_COLLECT_INTERVAL=100

# Advanced Settings
ENABLE_REQUEST_INTERCEPTION=true
BLOCK_RESOURCES="font,other,stylesheet"
ENABLE_JAVASCRIPT=true
WAIT_FOR_NETWORK_IDLE=true

# Development/Debug
SAVE_SCREENSHOTS=false
SCREENSHOT_DIR=./debug/screenshots
SAVE_HTML_SNAPSHOTS=false
HTML_SNAPSHOTS_DIR=./debug/html